[MASTER]
# Specify a configuration file
init-hook='import sys; sys.path.append("./app")'
ignore=migrations, manage.py, settings.py

[MESSAGES CONTROL]
# Disable warnings that might not be relevant for beginners
disable=missing-docstring, invalid-name, too-few-public-methods

[FORMAT]
# Control line length for better readability
max-line-length=80
indent-string="   "

[DESIGN]
# Set thresholds for complexity and other metrics
max-args=5
max-locals=10
max-module-lines=1000

[django]
# Enable Django-specific checks
enable=missing-final-newline, not-callable, no-else-return
generated-members=objects